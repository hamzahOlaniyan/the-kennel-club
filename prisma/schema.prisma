generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String  @id @default(uuid()) @db.Uuid
  email     String  @unique
  firstName String?
  lastName  String?
}

model Profile {
  id   String @id @default(uuid()) @db.Uuid
  dogs Dog[]
}

model Dog {
  id        String  @id @default(uuid()) @db.Uuid
  name String
  Breed Breed[]
  profileId String  @db.Uuid
  owner     Profile @relation(fields: [profileId], references: [id])
}

model Breed {
  id String @id @default(uuid()) @db.Uuid
  dogId String @db.Uuid 
  dog Dog @relation(fields: [dogId], references: [id])
}
